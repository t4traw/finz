<%# render partial: 'shared/delete_modal', locals: {link: '全てのユーザー情報を削除する', title: '本当に削除しますか？', content: 'ユーザーの削除をすると、アップロードファイルやプレイリストなど全ての情報が削除され、今後アクセスする事ができなくなります。本当に削除してもよいですか？', object: @user} %>

<% target = "modal-#{SecureRandom.hex(8)}" %>
<a class="cursor-pointer text-red-600" onclick="toggleHidden('<%= target %>')" data-turbolinks="false"><%= link %></a>

<div class="hidden fixed z-10 inset-0 overflow-y-auto bg-gray-700 bg-opacity-50" id="<%= target %>">
  <div class="flex items-center justify-center min-h-screen pt-4 px-4 pb-20">
    <button class="absolute right-0 top-0 w-10 h-10 mt-2 mr-2 text-white" onclick="toggleHidden('<%= target %>')">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
    <div class="bg-white p-3 md:max-w-3xl">
      <div class="text-xl font-bold py-2"><%= title %></div>
      <div class="py-2">
        <%= content %>
      </div>
      <div class="py-2">
        <%= link_to "削除します", object, method: :delete, class: "btn btn-error py-3 mr-2" %>
        <button class="btn" onclick="toggleHidden('<%= target %>')">キャンセル</button>
      </div>
    </div>
  </div>
</div>