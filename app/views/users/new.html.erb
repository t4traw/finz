<% content_for(:page_title) { "ユーザー登録" } %>
<% content_for(:page_summary) { "ユーザー登録をすると、自分のタックルボックスを投稿、コメントなどができるようになります！" } %>

<div class="container py-2 mx-auto md:flex">
  <div class="flex-1">
    <%= render partial: 'shared/form_error', locals: {form_object: @user} if @user.errors.any? %>
    <%= form_with(model: @user, local: true, class: "w-full mx-auto pt-4 flex flex-col relative") do |form| %>

    <div class="field">
      <%= form.label :name, class: 'form-label' do %>ニックネーム
      <%= form.text_field :name, id: :user_name, class: 'input w-full mb-4', placeholder: 'ニックネームを入力' %>
      <% end %>
    </div>

    <div class="field">
      <%= form.label :email, class: 'form-label' do %>メールアドレス
      <%= form.email_field :email, id: :user_email, class: 'input w-full mb-4', placeholder: 'メールアドレスを入力' %>
      <% end %>
    </div>

    <div class="field">
      <%= form.label :password, class: 'form-label' do %>パスワード
      <%= form.password_field :password, id: :user_password, class: 'input w-full mb-4', placeholder: 'パスワード(半角英数8文字以上)' %>
      <% end %>
    </div>

    <div class="field">
      <%= form.label :agreement, class: "inline-flex items-center pb-3", id: "user_agreement_label" do %>
      <%= form.check_box :agreement, as: :boolean, checked:false, class: "form-checkbox h-5 w-5 text-yellow-600" %>
      <span class="ml-2 text-gray-700">利用規約とプライバシーポリシーに同意の上、登録ボタンをクリックしてください</span>
      <% end %>
    </div>

    <%= form.submit '登録', class: "btn btn-link border-0 py-2 px-6 rounded text-lg", id: "user_resister_submit" %>
    <% end %>
  </div>

  <div class="divider-vert hidden md:block w-1/12" data-content="OR"></div>

  <div class="flex-1">
    <div class="w-full mx-auto pt-8 flex flex-col relative">
      <%= link_to auth_at_provider_path(provider: :twitter), class: "btn-original btn-twitter" do %>
      <div class="svg-icon"><svg xmlns="http://www.w3.org/2000/svg" width="28" height="24" viewBox="0 0 24 24"
          fill="#fff">
          <path
            d="M24 4.37a9.6 9.6 0 0 1-2.83.8 5.04 5.04 0 0 0 2.17-2.8c-.95.58-2 1-3.13 1.22A4.86 4.86 0 0 0 16.61 2a4.99 4.99 0 0 0-4.79 6.2A13.87 13.87 0 0 1 1.67 2.92 5.12 5.12 0 0 0 3.2 9.67a4.82 4.82 0 0 1-2.23-.64v.07c0 2.44 1.7 4.48 3.95 4.95a4.84 4.84 0 0 1-2.22.08c.63 2.01 2.45 3.47 4.6 3.51A9.72 9.72 0 0 1 0 19.74 13.68 13.68 0 0 0 7.55 22c9.06 0 14-7.7 14-14.37v-.65c.96-.71 1.79-1.6 2.45-2.61z" />
        </svg></div>
      <span>Login with Twitter</span>
      <% end %>
    </div>
  </div>
</div>

<div class="container py-2 pt-2 md:pt-8 m-auto">
  <div class="menu-item">
    <%= link_to login_path do %>
    <i class="icon icon-link mr-1"></i>すでにアカウントを持っている方はこちら
    <% end %>
  </div>
  <div class="menu-item">
    <%= link_to new_password_reset_path do %>
    <i class="icon icon-link mr-1"></i>パスワードを忘れてしまった方はこちら
    <% end %>
  </div>
</div>