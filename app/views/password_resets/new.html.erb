<% content_for(:page_title) { "パスワードリセット" } %>
<% content_for(:page_summary) { "パスワードの再発行ができます。登録したメールアドレスを入力してください" } %>

<div class="container">
  <%= form_with(url: password_resets_path, method: :post, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :email, class: "form-label" %>
    <%= form.text_field :email, class: "form-input" %>
  </div>

  <div class="form-action">
    <%= form.submit "送信", class: "btn btn-primary" %>
  </div>
  <% end %>
  <div class="divider" style="margin-top: 1rem;"></div>
  <div class="menu-item">
    <%= link_to new_user_path do %>
    <i class="icon icon-link mr-1"></i>ユーザー登録はこちら
    <% end %>
  </div>
  <div class="menu-item">
    <%= link_to login_path do %>
    <i class="icon icon-link mr-1"></i>パスワードを覚えている方はこちら
    <% end %>
  </div>
</div>